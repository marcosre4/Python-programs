print("Resolution of an equation")
type=int(input("Choose the type of equation 1) x+a=b / 2)cx+a=b :"))
while type!=1 and type!=2:
    print("Please choose only 1 or 2 !")
    type=int(input("Choose the type of equation 1) x+a=b / 2)cx+a=b :"))
if type==1:
      a=float(input("Enter with a valor for a :"))
      b=float(input("Enter with a valor for b :"))
      print(f"The valor of  x is :{b-a}")
else:
    a=float(input("Enter with a valor for a :"))
    b=float(input("Enter with a valor for b :"))
    c=float(input("Enter with a valor for c: "))
    while c==0:
        print("The valor of c must be>0 !")
        c=float(input("Enter with a valor for c: "))
    print(f"The valor of x is :{(b-a)/c}")

